<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="pharmacy_store.controllers.CustomersController">
    <VBox prefHeight="425.0" prefWidth="400.0">
        <Button fx:id="storageButton" onAction="#switchToSceneMain" text="Back to main menu" textAlignment="CENTER" />
        <TableView fx:id="customerTable" xmlns:fx="http://javafx.com/fxml">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="first_nameColumn" text="Имя" />
                <TableColumn fx:id="last_nameColumn"  text="Фамилия" />
                <TableColumn fx:id="phone_numberColumn" text="Номер телефона" />
                <TableColumn fx:id="discountColumn" text="Скидка (%)" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
